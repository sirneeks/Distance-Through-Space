    <script>
        // Set max date to today
        document.getElementById('birthday').max = new Date().toISOString().split('T')[0];

        // Unit toggle functionality
        document.querySelectorAll('.unit-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.unit-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });

        function calculateDistance() {
            const birthdayInput = document.getElementById('birthday').value;
            
            if (!birthdayInput) {
                alert('Please enter your birthday!');
                return;
            }

            const birthday = new Date(birthdayInput);
            const today = new Date();
            
            // Calculate time difference
            const timeDiff = today - birthday;
            const daysPassed = timeDiff / (1000 * 60 * 60 * 24);
            const yearsPassed = daysPassed / 365.25;

            // Get selected unit
            const unit = document.querySelector('.unit-btn.active').dataset.unit;
            const isKm = unit === 'km';

            // Constants (in kilometers)
            const earthCircumference = 40075; // km at equator
            const earthOrbitCircumference = 940000000; // km (Earth's orbit around sun)
            const milkyWaySpeed = 2100000; // km per day (solar system's movement through galaxy)

            // Calculations
            const rotationDistance = daysPassed * earthCircumference;
            const orbitDistance = yearsPassed * earthOrbitCircumference;
            const galaxyDistance = daysPassed * milkyWaySpeed;
            const totalDistance = rotationDistance + orbitDistance + galaxyDistance;

            // Convert to miles if needed
            const conversionFactor = isKm ? 1 : 0.621371;
            const unitLabel = isKm ? 'km' : 'miles';

            // Format numbers with commas
            function formatNumber(num) {
                return Math.round(num * conversionFactor).toLocaleString();
            }

            // Update results
            document.getElementById('rotationDistance').textContent = formatNumber(rotationDistance) + ' ' + unitLabel;
            document.getElementById('rotationDetail').textContent = 
                `Earth has rotated ${Math.round(daysPassed).toLocaleString()} times on its axis since you were born. That's a ${formatNumber(earthCircumference)} ${unitLabel} journey each day!`;

            document.getElementById('orbitDistance').textContent = formatNumber(orbitDistance) + ' ' + unitLabel;
            document.getElementById('orbitDetail').textContent = 
                `You've completed ${yearsPassed.toFixed(2)} orbits around the Sun. Earth travels about ${formatNumber(earthOrbitCircumference)} ${unitLabel} per orbit!`;

            document.getElementById('galaxyDistance').textContent = formatNumber(galaxyDistance) + ' ' + unitLabel;
            document.getElementById('galaxyDetail').textContent = 
                `Our solar system moves through the Milky Way at about ${formatNumber(milkyWaySpeed)} ${unitLabel} per day. That's approximately ${formatNumber(milkyWaySpeed * 365.25)} ${unitLabel} per year!`;

            document.getElementById('totalDistance').textContent = formatNumber(totalDistance) + ' ' + unitLabel;

            // Show results with animation
            const resultsDiv = document.getElementById('results');
            resultsDiv.style.display = 'block';
            resultsDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });

            // Store distances globally for comparisons
            window.calculatedDistances = {
                rotation: rotationDistance,
                orbit: orbitDistance,
                galaxy: galaxyDistance,
                total: totalDistance,
                unit: unit,
                isKm: isKm
            };

            // Clear previous comparisons
            document.getElementById('rotationComparison').value = '';
            document.getElementById('orbitComparison').value = '';
            document.getElementById('galaxyComparison').value = '';
            document.getElementById('totalComparison').value = '';
            document.getElementById('rotationComparisonResult').textContent = '';
            document.getElementById('orbitComparisonResult').textContent = '';
            document.getElementById('galaxyComparisonResult').textContent = '';
            document.getElementById('totalComparisonResult').textContent = '';
        }

        function updateComparison(type) {
            const dropdown = document.getElementById(type + 'Comparison');
            const resultDiv = document.getElementById(type + 'ComparisonResult');
            const comparison = dropdown.value;
            
            if (!comparison) {
                resultDiv.textContent = '';
                return;
            }

            const distances = window.calculatedDistances;
            const distance = distances[type]; // in km
            const isKm = distances.isKm;
            const unitLabel = isKm ? 'km' : 'miles';
            
            // Comparison constants (all in km)
            const comparisons = {
                // Rotation comparisons
                equator: { value: 40075, label: 'times around Earth\'s equator' },
                moon: { value: 384400, label: 'round trips to the Moon' },
                football: { value: 0.1097, label: 'American football fields' },
                eiffel: { value: 0.330, label: 'Eiffel Towers stacked' },
                
                // Orbit comparisons
                earthMoon: { value: 384400, label: 'one-way trips from Earth to the Moon' },
                earthSun: { value: 149600000, label: 'trips from Earth to the Sun' },
                mars: { value: 225000000, label: 'trips to Mars (at closest approach)' },
                lightSeconds: { value: 299792, label: 'light-seconds' },
                
                // Galaxy comparisons
                neptune: { value: 4500000000, label: 'trips to Neptune' },
                pluto: { value: 5900000000, label: 'trips to Pluto (at closest)' },
                voyager: { value: 24000000000, label: 'times the distance Voyager 1 has traveled' },
                lightYears: { value: 9460730472580.8, label: 'light-years' },
                
                // Total comparisons
                solarSystem: { value: 12000000000, label: 'times across the solar system (to Pluto)' },
                proxima: { value: 40208000000000, label: 'of the distance to Proxima Centauri' },
                milkyWay: { value: 946073047258080, label: 'of the distance across the Milky Way' },
                andromeda: { value: 23765258595262000, label: 'of the distance to Andromeda Galaxy' }
            };
            
            const compData = comparisons[comparison];
            if (!compData) return;
            
            const result = distance / compData.value;
            
            let resultText = '';
            if (result >= 1) {
                resultText = `That's ${result.toFixed(2).toLocaleString()} ${compData.label}! üéâ`;
            } else if (result >= 0.01) {
                const percentage = (result * 100).toFixed(2);
                resultText = `That's ${percentage}% of ${compData.label}! üåü`;
            } else if (result >= 0.0001) {
                const percentage = (result * 100).toFixed(4);
                resultText = `That's ${percentage}% of ${compData.label}! ‚ú®`;
            } else {
                const percentage = (result * 100).toExponential(2);
                resultText = `That's ${percentage}% of ${compData.label}! üí´`;
            }
            
            resultDiv.textContent = resultText;
        }
    </script>
</body>
</html>
