<body>
    <div class="container">
        <header>
            <h1>üåå Space Travel Calculator</h1>
            <p class="subtitle">Discover how far you've traveled through the cosmos since birth</p>
        </header>

        <div class="input-section">
            <div class="input-group">
                <label for="birthday">Enter Your Birthday:</label>
                <input type="date" id="birthday" max="">
            </div>

            <div class="input-group">
                <label>Distance Unit:</label>
                <div class="unit-toggle">
                    <button class="unit-btn active" data-unit="km">Kilometers</button>
                    <button class="unit-btn" data-unit="miles">Miles</button>
                </div>
            </div>

            <button class="calculate-btn" onclick="calculateDistance()">Calculate My Space Journey</button>
        </div>

        <div class="results" id="results">
            <div class="result-card">
                <div class="result-title">
                    <span class="icon">üåç</span>
                    Earth's Rotation
                </div>
                <div class="result-value" id="rotationDistance"></div>
                <div class="result-detail" id="rotationDetail"></div>
                <div class="comparison-section">
                    <select class="comparison-dropdown" id="rotationComparison" onchange="updateComparison('rotation')">
                        <option value="">Choose a fun comparison...</option>
                        <option value="equator">Times around Earth's equator</option>
                        <option value="moon">Trips to the Moon</option>
                        <option value="football">Football fields</option>
                        <option value="eiffel">Eiffel Towers stacked</option>
                    </select>
                    <div class="comparison-result" id="rotationComparisonResult"></div>
                </div>
            </div>

            <div class="result-card">
                <div class="result-title">
                    <span class="icon">‚òÄÔ∏è</span>
                    Orbit Around the Sun
                </div>
                <div class="result-value" id="orbitDistance"></div>
                <div class="result-detail" id="orbitDetail"></div>
                <div class="comparison-section">
                    <select class="comparison-dropdown" id="orbitComparison" onchange="updateComparison('orbit')">
                        <option value="">Choose a fun comparison...</option>
                        <option value="earthMoon">Earth to Moon trips</option>
                        <option value="earthSun">Earth to Sun trips</option>
                        <option value="mars">Trips to Mars</option>
                        <option value="lightSeconds">Light-seconds traveled</option>
                    </select>
                    <div class="comparison-result" id="orbitComparisonResult"></div>
                </div>
            </div>

            <div class="result-card">
                <div class="result-title">
                    <span class="icon">üåå</span>
                    Milky Way Movement
                </div>
                <div class="result-value" id="galaxyDistance"></div>
                <div class="result-detail" id="galaxyDetail"></div>
                <div class="comparison-section">
                    <select class="comparison-dropdown" id="galaxyComparison" onchange="updateComparison('galaxy')">
                        <option value="">Choose a fun comparison...</option>
                        <option value="neptune">Trips to Neptune</option>
                        <option value="pluto">Trips to Pluto</option>
                        <option value="voyager">Distance Voyager 1 has traveled</option>
